@model RegisterViewModel
@{
    ViewData["Title"] = "Registar Novo Utilizador";
}

<center><h2>@ViewData["Title"]</h2></center>

<div class="row" style="border:solid;border-color: lightgreen">
    <div class="col-md-4" >
        
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group" style="width: 1000px">
                    <label asp-for="Nome"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 1000px">
                    <label asp-for="Apelido"></label>
                    <input asp-for="Apelido" class="form-control" />
                    <span asp-validation-for="Apelido" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 1000px">
                    <label asp-for="NumeroAluno"></label>
                    <input asp-for="NumeroAluno" class="form-control" />
                    <span asp-validation-for="NumeroAluno" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 1000px">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group" style="width: 1000px">
                    <label asp-for="DataNascimento"></label>
                    <input asp-for="DataNascimento" class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 1000px">
                    <label asp-for="PalavraPasse"></label>
                    <input asp-for="PalavraPasse" class="form-control" />
                    <span asp-validation-for="PalavraPasse" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 1000px">
                    <label asp-for="ConfirmarPalavraPasse"></label>
                    <input asp-for="ConfirmarPalavraPasse" class="form-control" />
                    <span asp-validation-for="ConfirmarPalavraPasse" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-default">Register</button>
            </form>
        </div>
    </div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
